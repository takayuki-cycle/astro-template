  <img src={ship.src} alt='船です' width='700' height='300' />
  <p>TEST_TEST_TEST_TEST_TEST</p>
  <Image src={salt} alt='塩です' width='700' height='300' isOptimization />
  <p>TEST_TEST_TEST_TEST_TEST</p>
  <p>Pictureです。</p>
  <Picture
    src={[living, car]}
    width={['117', '160']}
    height={['117', '110']}
    media={[BREAKPOINTS.lg]}
    alt='リビングと車です'
    isOptimization
  />
  <div>
    <Avatar items={items} />{/* Image */}
    <Avatar src={test1} size='lg' />{/* Image */}
