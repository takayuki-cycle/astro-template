---
import Layout from '@/layouts/Layout.astro'
import type { HeadPageProps } from '@/layouts/head/types'

export const prerender = false

const counter = 0

Astro.cookies.set('counter', String(counter))

export async function get() {
  return {
    body: JSON.stringify({
      message: 'Hello, SSR!',
      date: new Date().toISOString()
    }),
    headers: {
      'Content-Type': 'application/json'
    }
  }
}

const now = new Date().toLocaleString() // 現在のサーバー時間

const headPage: HeadPageProps = {
  title: 'ssrPageTitle',
  description: 'ssrページの説明です。',
  robots: 'all',
  ogType: 'website',
  ogImage: '/ogp/general.webp',
  ogImageAlt: 'ogImageAlt',
  xCreator: '@xCreator',
  author: 'author'
}
---

<Layout headPage={headPage}>
  <h1>Astro SSR Check</h1>
  <p>Server-rendered date and time: {now}</p>
</Layout>
