---
import { fetchTodos } from '@/templates/todos/api'
import RadioGroup from '@/components/radioGroup/RadioGroup.astro'
import { Button } from '@/components/button/Button'

const todos = await fetchTodos()
const titles = todos.map((todo) => todo.title)
console.log('todostodostodostodostodos', todos)
---

<div>
  <h1>タスク一覧</h1>
  <RadioGroup
    sx={{ labelRadio: 'visible', color: 'primary' }}
    label='果物'
    group={titles}
    apiKey='fruit'
  />
  {/* <RadioGroup label='野菜' group={titles} invert /> */}
  <Button client:load />
</div>
