---
import { fetchTodos } from '@/templates/todos/api'
import RadioGroupOrTabs from '@/components/radioGroupOrTabs/RadioGroupOrTabs.astro'

interface Props {
  label: string // 1画面に対してこのコンポーネントを複数使うときは、それぞれ異なるラベル名(name属性)を設定してください。
}

const { label } = Astro.props
const todos = await fetchTodos()
const titles = todos.map((todo) => todo.title)
---

<RadioGroupOrTabs label={label} group={titles} apiKey='fruit' />
